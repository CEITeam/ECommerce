

@page

@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


@* <!-- Register --> *@
<div class="row">
    <div class="container">

        <form id="register" class="login" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-row ">
                <h4 class="login__header mr-4">
                    Register An Account As:
                </h4>


                <div class="form-group ml-4 pl-4">
                    <input class="form-check-input " type="radio" name="exampleRadios" id="brand" value="customer" checked onchange="registerBrand()">
                    <label class="form-check-label" for="brand">
                        Brand
                    </label>
                </div>
                <div class="form-group ">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="customer" value="customer" onchange="registerCustomer()">
                    <label class="form-check-label" for="customer">
                        Customer
                    </label>
                </div>
            </div>
            <hr />

            <div id="registerBrand">
                <div class="form-group">
                    <label asp-for="BrandInput.Name"></label>
                    <input asp-for="BrandInput.Name" class="form-control" />
                    <span asp-validation-for="BrandInput.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BrandInput.UserName"></label>
                    <input asp-for="BrandInput.UserName" class="form-control" />
                    <span asp-validation-for="BrandInput.UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BrandInput.Phone"></label>
                    <input asp-for="BrandInput.Phone" class="form-control" />
                    <span asp-validation-for="BrandInput.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrandInput.Website"></label>
                    <input asp-for="BrandInput.Website" class="form-control" />
                    <span asp-validation-for="BrandInput.Website" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrandInput.Email"></label>
                    <input asp-for="BrandInput.Email" class="form-control" />
                    <span asp-validation-for="BrandInput.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrandInput.Address"></label>
                    <textarea asp-for="BrandInput.Address" class="form-control"></textarea>
                    <span asp-validation-for="BrandInput.Address" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="BrandInput.Password"></label>
                        <input asp-for="BrandInput.Password" class="form-control" />
                        <span asp-validation-for="BrandInput.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandInput.ConfirmPassword"></label>
                        <input asp-for="BrandInput.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="BrandInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*--------------------------Customer Form ---------------------------*@


            <div id="registerCustomer" class="d-none">
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="CustomerInput.FirstName"></label>
                        <input asp-for="CustomerInput.FirstName" class="form-control" />
                        <span asp-validation-for="CustomerInput.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerInput.LastName"></label>
                        <input asp-for="CustomerInput.LastName" class="form-control" />
                        <span asp-validation-for="CustomerInput.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInput.UserName"></label>
                    <input asp-for="CustomerInput.UserName" class="form-control" />
                    <span asp-validation-for="CustomerInput.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInput.Phone"></label>
                    <input asp-for="CustomerInput.Phone" class="form-control" />
                    <span asp-validation-for="CustomerInput.Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerInput.Email"></label>
                    <input asp-for="CustomerInput.Email" class="form-control" />
                    <span asp-validation-for="CustomerInput.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerInput.Address"></label>
                    <textarea asp-for="CustomerInput.Address" class="form-control"></textarea>
                    <span asp-validation-for="CustomerInput.Address" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="CustomerInput.Password"></label>
                        <input asp-for="CustomerInput.Password" class="form-control" />
                        <span asp-validation-for="CustomerInput.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerInput.ConfirmPassword"></label>
                        <input asp-for="CustomerInput.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="CustomerInput.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @*--------------------------------End of Customer Form---------------------------------------*@

            <div class="login__remember-me">
                <div class="add-product__actions">
                    <button type="submit" class="btn btn--primary">Register</button>
                    <a asp-controller="Home" class="btn btn--gray">Cancel</a>
                </div>
            </div>
            <a asp-page="Login" class="login__register-now">You are alredy a member?</a>
        </form>




    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}
